<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/primaryBGColor"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/username_imageView"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:layout_marginTop="16dp"
                app:srcCompat="?attr/primaryNameField"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/firstNameRegEntryField"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="36dp"
                android:background="@null"
                android:ems="10"
                android:hint="@string/regFirstNameHint"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:maxLength="26"
                android:textColor="@color/textColWhiteDUI"
                android:textColorHint="?attr/primaryHintTextColor"
                android:textColorLink="@null"
                android:textCursorDrawable="@null"
                android:textSize="14sp"
                app:fontFamily="@font/montserrat_medium" />


            <EditText
                android:id="@+id/lastNameRegEntryField"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="88dp"
                android:layout_marginEnd="36dp"
                android:background="@null"
                android:ems="10"
                android:hint="@string/regLastNameHint"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:maxLength="26"
                android:textColor="@color/textColWhiteDUI"
                android:textColorHint="?attr/primaryHintTextColor"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/emailEntryImageView"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:srcCompat="?attr/primaryEmailField"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/emailRegEntryField"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="36dp"
                android:background="@null"
                android:ems="10"
                android:hint="@string/regEmailHint"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:textColor="@color/textColWhiteDUI"
                android:textColorHint="?attr/primaryHintTextColor"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/passwordRegImageView"
                android:layout_width="match_parent"
                android:layout_height="64dp"

                app:srcCompat="?attr/primaryPasswordField"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/passwordRegEntryField"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="36dp"
                android:background="@null"
                android:ems="10"
                android:hint="@string/regPasswordHint"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:maxLength="24"
                android:textColor="@color/textColWhiteDUI"
                android:textColorHint="?attr/primaryHintTextColor"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="12dp"
            android:background="?attr/primaryUIButton"
            android:fontFamily="@font/montserrat_bold"
            android:letterSpacing="0.15"
            android:padding="10dp"
            android:text="@string/registerButton"
            android:textColor="@color/textColWhiteDUI" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>